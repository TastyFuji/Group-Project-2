generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String?
  name      String?
  role      String   @default("user")
  enabled   Boolean  @default(true)
  address   String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  price       String
  sold        String  @default("0")
  stock       String
}

model Order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  cartTotal   String
  orderStatus String   @default("Not Process")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  updatedAt DateTime @updatedAt
}
